                </tr>
                <tr>
                    <td colspan="2" align="center">
                        <asp:Label ID="lblMessage" runat="server" ForeColor="Red" CssClass="simpletxt1"></asp:Label>
                    </td>
                </tr>
                <tr>
                    <td align="center" colspan="2">
                        <asp:Label ID="ActionStatus" ForeColor runat="server" CssClass="simpletxt1" Font-Bold="true"></asp:Label>
                  </td></tr></table>
                    </td>
